export PATH=$HOME/bin:/usr/local/bin:$PATH
export ZSH=/home/thiago/.oh-my-zsh

# See https://github.com/robbyrussell/oh-my-zsh/wiki/Themes
ZSH_THEME="fishy"

# Work
export OLIST=./OlistProjects/

plugins=(
    git
    common-aliases
    git-extras
    github
    python
    sudo
    heroku
    gnu-utils
    safe-paste
    cargo
    zsh-autosuggestions
    zsh-syntax-highlighting
)

source $ZSH/oh-my-zsh.sh

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm

#GO path
export GOPATH=$HOME/Documents/Go
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin

# Pyenv and virutalenvwrapper
export PATH="$HOME/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"
export PYENV_VIRTUALENVWRAPPER_PREFER_PYVENV="true"
export PYTHON_VERSION=`pyenv version-name`
echo -e "\e[01;32mPython version: $PYTHON_VERSION\e[0m"
export PROJECT_HOME=$OLIST
export WORKON_HOME=$HOME/.virtualenvs

if [ $PYTHON_VERSION != "system" ]; then
   pyenv virtualenvwrapper
fi

# GPG Key
export GPG_TTY=$(tty)

# Alias
alias emacs='emacs -nw --no-init-file'
[ -s "$OLIST" ] && alias note_work='emacs -nw "${OLIST}"/notes.org'
alias note_me='emacs -nw "$HOME"/Documents/notes.org'
alias python_dev='pip install rope jedi flake8 autopep8 yapf isort elpy'
alias update='sudo apt update && sudo apt dist-upgrade -y && sudo apt autoremove'

[ -s $HOME/.cargo ] && source $HOME/.cargo/env
